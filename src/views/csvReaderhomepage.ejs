<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>CSV Reader</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <link href="/csvReaderhomepage.css" rel="stylesheet" type="text/css" />
    <script
      src="https://kit.fontawesome.com/4747e8ca62.js"
      crossorigin="anonymous"
    ></script>
  </head>
  <body>
    <div id="mainContainer">
      <div
        class="modal fade"
        id="addCsvmodal"
        tabindex="-1"
        aria-labelledby="addCsvmodalLabel"
        aria-hidden="true"
      >
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h1 class="modal-title fs-5" id="addCsvmodalLabel">
                Add new CSV
              </h1>
              <button
                type="button"
                class="btn-close"
                data-bs-dismiss="modal"
                aria-label="Close"
              ></button>
            </div>
            <div class="modal-body">
              <!-- form to submit new project -->
              <form action="/api/csv/upload" method="post" id="addCsvform">
                <div class="mb-3">
                  <label for="name" class="form-label">Name of Csv:</label>
                  <input
                    type="text"
                    class="form-control"
                    id="name"
                    name="name"
                  />
                  <div id="nameError" class="form-text errorDiv"></div>
                </div>
                <div class="mb-3">
                  <label for="description" class="form-label"
                    >Description:</label
                  >
                  <input
                    type="text"
                    class="form-control"
                    id="description"
                    name="description"
                  />
                  <div id="descriptionError" class="form-text errorDiv"></div>
                </div>
                <div class="mb-3">
                  <label for="author" class="form-label">Author:</label>
                  <input
                    type="text"
                    class="form-control"
                    id="author"
                    name="author"
                  />
                  <div id="authorError" class="form-text errorDiv"></div>
                </div>
                <div class="mb-3">
                  <label for="file" class="form-label">File:</label>
                  <input
                    type="file"
                    class="form-control"
                    id="file"
                    name="file"
                  />
                  <div id="fileError" class="form-text errorDiv"></div>
                </div>
                <button
                  id="addCsvformSubmit"
                  type="submit"
                  class="btn btn-primary"
                >
                  Add
                </button>
              </form>
            </div>
          </div>
        </div>
      </div>
      <div id="headerDiv"></div>
      <div id="csvTablediv">
        <table id="csvTable">
          <thead class="tableHead">
            <tr>
              <th scope="col">ID</th>
              <th scope="col">Name</th>
              <th scope="col">Description</th>
              <th scope="col">Author</th>
              <th scope="col">View / Delete</th>
            </tr>
          </thead>
          <tbody>
            <% csvs.forEach(csv=>{ %>
            <tr>
              <td class="id"><%= csv._id %></td>
              <td><%= csv.name %></td>
              <td><%= csv.description %></td>
              <td><%= csv.author %></td>
              <td>
                <div class="viewDelete">
                  <div class="viewFile"><i class="fa-solid fa-eye"></i></div>
                  <div class="deleteFile">
                    <i class="fa-solid fa-trash"></i>
                  </div>
                </div>
              </td>
            </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
      <div id="addCsv">
        <button data-bs-toggle="modal" data-bs-target="#addCsvmodal">
          <i class="fa-solid fa-upload"></i>
        </button>
      </div>
    </div>
  </body>
  <script
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
    crossorigin="anonymous"
  ></script>
  <script src="/csvReaderhomepage.js"></script>
</html>
